<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pudge" parent="Theme.AppCompat.DayNight.NoActionBar">


    </style>

    <style name="Theme.Start" parent="Theme.SplashScreen">
        <!--启动画面背景颜色-->
        <item name="windowSplashScreenBackground">@color/black</item>
        <!-- 启动画面icon图标：这里可以是图片、帧动画等-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/start</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <!-- icon动画在关闭之前显示的时长：最长时间为1000毫秒-->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- 启动画面底部的 Brand 图片-->
<!--        <item name="android:windowSplashScreenBrandingImage">@drawable/brand_img</item>-->
        <!-- Splash退出后的主题-->
        <item name="postSplashScreenTheme">@style/Base.Theme.Pudge</item>

    </style>


</resources>